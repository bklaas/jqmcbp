[% BLOCK sssList %]
	[% INCLUDE tableHeadings %]
	[% FOR row IN rowdata %]
	<tr class = '[% IF row.player_id == cookie %]thisisme[% ELSE %]brackets2[% END %]' >
		<td>[% row.rank %]</td>
		<td nowrap = ""><a href = "player_bracket.cgi?player_id=[% row.player_id %]">[% row.name | truncate (50) %]</a></td>
		<td>[% row.score %]</td>
		<td>[% row.rtt %]</td>
	        <td class = "
		        [% IF row.similarity == 100 %]one
		        [% ELSIF row.similarity > 80 %]two
		        [% ELSIF row.similarity > 60 %]three
		        [% ELSIF row.similarity > 40 %]four
			[% ELSIF row.similarity > 20 %]five
		        [% ELSE %]six
		        [% END %]">[% row.similarity %]</td>
	</tr>
	[% END %]
[% END %]

[% BLOCK tableHeadings %]
	<tr><td colspan = '5' class = 'thisisme'>[% myList %]</td></tr>
	<tr>
		<th class = 'brackets1'>Rank</th>
		<th class = 'brackets1'>Name</th>
		<th class = 'brackets1'>Score</th>
		<th class = 'brackets1'>RtT&#0153;</th>
		<th class = 'brackets1'>SSS&#0153;</th>
	</tr>
[% END %]
